<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="bottom"
              android:orientation="vertical"
              android:padding="20dp">

  <ScrollView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
          android:id="@+id/new_apt_country_textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/new_apartment_country_text_view"
          android:textSize="12sp"/>

        <EditText
          android:id="@+id/new_apt_country_edit_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/colorPrimary"
          android:hint="@string/new_apartment_country_edit_text"
          android:imeOptions="actionDone"
          android:inputType="textPostalAddress"
          android:textSize="16sp"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
          android:id="@+id/new_apt_city_textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/new_apartment_city_text_view"
          android:textSize="12sp"/>

        <EditText
          android:id="@+id/new_apt_city_edit_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/colorPrimary"
          android:hint="@string/new_apartment_city_edit_text"
          android:imeOptions="actionDone"
          android:inputType="textPostalAddress"
          android:textSize="16sp"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
          android:id="@+id/new_apt_address_textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/new_apartment_street_text_view"
          android:textSize="12sp"/>

        <EditText
          android:id="@+id/new_apt_street_edit_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/colorPrimary"
          android:hint="@string/new_apartment_street_edit_text"
          android:imeOptions="actionDone"
          android:inputType="textPostalAddress"
          android:textSize="16sp"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
          android:id="@+id/new_apt_zip_textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/new_apartment_zip_text_view"
          android:textSize="12sp"/>

        <EditText
          android:id="@+id/new_apt_zip_edit_text"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:backgroundTint="@color/colorPrimary"
          android:ems="4"
          android:hint="@string/new_apartment_zip_edit_text"
          android:imeOptions="actionDone"
          android:inputType="number"
          android:textSize="16sp"/>
      </LinearLayout>
    </LinearLayout>
  </ScrollView>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <Button
      android:id="@+id/new_apt_check_location_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:background="@drawable/ripple_button"
      android:text="@string/check_location_button"
      android:textColor="#ffffff"/>

    <Button
      android:id="@+id/new_apt_save_button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="5dp"
      android:background="@drawable/ripple_button"
      android:enabled="false"
      android:text="@string/new_apt_save_button"
      android:textColor="#ffffff"
      />

  </LinearLayout>
</LinearLayout>